@{ 
    ViewData["Title"] = "Character";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<RPG.Models.Character>

@foreach (var character in Model)
{
    <h4>Name: @Html.DisplayFor(c => character.Name) | @Html.ActionLink("Details", "Details", "Item", new { id = character.CharacterId }) | @Html.ActionLink("Delete", "Delete", new { id = character.CharacterId })</h4>
    <p>Level: @Html.DisplayFor(c => character.Level)</p>
    <p>Health: @Html.DisplayFor(c => character.Health)</p>   
    <hr />
    <br />
}



@Html.ActionLink("New Character", "Create")
